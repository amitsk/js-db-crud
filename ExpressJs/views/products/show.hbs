<h1>{{title}}</h1>

<div class="card">
  <div class="card-body">
    {{#each fields}}
      <div class="mb-3">
        <label class="form-label fw-bold">{{capitalize this}}:</label>
        <p class="form-control-plaintext">{{lookup ../item this}}</p>
      </div>
    {{/each}}
  </div>
</div>

<div class="mt-3">
  <a href="/{{entity}}s/{{item.id}}/edit" class="btn btn-warning">Edit</a>
  <a href="/{{entity}}s" class="btn btn-secondary">Back to List</a>
  <form method="POST" action="/{{entity}}s/{{item.id}}?_method=DELETE" style="display: inline;">
    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this {{entity}}?')">Delete</button>
  </form>
</div>